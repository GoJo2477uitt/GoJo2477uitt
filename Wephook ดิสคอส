                        value = "```"..gameid.."```",
                        inline = true
                    },
                    {
                        name = "Job ID",
                        value = "```"..jobid.."```",
                        inline = true
                    },
                    {
                        name = "Player",
                        value = "```"..player.Name.."```",
                        inline = true
                    },
                    {
                        name = "UserId",
                        value = "```"..player.UserId.."```",
                        inline = true
                    },
                    {
                        name = "Profile",
                        value = "```https://www.roblox.com/users/"..player.UserId.."/profile```"
