   Callback = function(Value)
       MobFarm = Value
   end
})

local Toggle = Tab.Main:AddToggle("Toggle", {
    Title = "Auto Farm",
    Default = false,
    Callback = function(He)
        _G.AutoFarm2 = He
    end
})


function A()
  game:GetService'VirtualUser':CaptureController()
game:GetService'VirtualUser':Button1Down(Vector2.new(1280, 672))
end

spawn(function()
    while wait() do
        pcall(function()
            if _G.AutoFarm2 then
                for i, v in pairs(game:GetService("Workspace").Mob:GetDescendants()) do
                    if v.Name == MobFarm and v:FindFirstChild("HumanoidRootPart") and v.Humanoid.Health >= 1 then
                        repeat
                           A()
                            wait()
 game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = v.HumanoidRootPart.CFrame * CFrame.new(0, 0, 2)
                        until _G.AutoFarm2  == false or v.Humanoid.Health <= 0
                    end
                end
            end
        end)
    end
end)

